{
    "extends": [
        "airbnb-base"
    ],
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "script"
    },
    "rules": {
        "strict": [2, "global"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "classes": true,
                "functions": false
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "__GetDependency__",
                    "__ResetDependency__",
                    "__set__",
                    "__get__"
                ]
            }
        ],
        "class-methods-use-this": "off",
        "no-alert": "off",
        "prefer-destructuring": "off",
        "global-require": "off",
        "quote-props": [
            "error",
            "consistent"
        ],
        "no-plusplus": "off",
        "no-restricted-syntax": "off"
    }
}